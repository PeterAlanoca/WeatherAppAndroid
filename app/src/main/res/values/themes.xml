<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/ultramarine_blue</item>
        <item name="colorPrimaryDark">@color/ultramarine_blue</item>
        <item name="colorPrimaryVariant">@color/ultramarine_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/ultramarine_blue</item>
        <item name="android:navigationBarColor">@color/ultramarine_blue</item>
        <item name="bottomSheetDialogTheme">@style/Theme.BottomSheet</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/ultramarine_blue</item>
        <item name="colorPrimaryDark">@color/ultramarine_blue</item>
        <item name="colorPrimaryVariant">@color/ultramarine_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/ultramarine_blue</item>
        <item name="android:navigationBarColor">@color/ultramarine_blue</item>
    </style>

    <style name="Theme.Menu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/ultramarine_blue</item>
        <item name="colorPrimaryDark">@color/ultramarine_blue</item>
        <item name="colorPrimaryVariant">@color/ultramarine_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/ultramarine_blue</item>
        <item name="android:navigationBarColor">@color/ultramarine_blue</item>
        <item name="bottomSheetDialogTheme">@style/Theme.BottomSheet</item>
    </style>

    <style name="Theme.TitleMenuItemBottom" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_white</item>
    </style>

    <style name="ThemeDialog" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:padding">1dp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!--item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item-->
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>


</resources>